{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist-electron",
        "rootDir": "electron",
        "declaration": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}