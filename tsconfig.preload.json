{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist-electron",
        "rootDir": "electron",
        "declaration": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "electron/preload.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}